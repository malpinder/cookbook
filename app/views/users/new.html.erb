<div>
  <%= error_messages_for :user %>
</div>
<div class="container">
<% form_for @user do |f| %>
  <div>
    <%= f.label :username, 'Desired Username' %>
    <%= f.text_field :username %>
  </div>
  <div>
    <%= f.label :email, 'E-mail Address' %>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :password, 'Desired Password' %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation, 'Confirm Password' %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div>
    <%= f.submit 'Submit' %>
  </div>
 <% end %>
</div>
 <div>Your username will be the name you login with, and will be displayed for other users to see.</div>
 <div>Passwords must be between 6 and 16 characters long, and contain at least one number.</div>
