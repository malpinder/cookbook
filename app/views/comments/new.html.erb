<% if logged_in? %>

<div>
  Add a comment about <%= @recipe.name %>:
</div>
<div>
  <% form_for @comment, :url => recipe_comments_path do |c|%>
    <%= c.label :comment, 'Please enter your comment here:' %><br/>
    <%= c.text_area :comment %>
    <%= c.submit 'Submit' %>
  <% end %>
</div>

<% else %>
<div class="error">
  You must be logged in to comment.
</div>
<% end %>